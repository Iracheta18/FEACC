<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="320"
    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="160"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mother"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:gravity="left"
        android:id="@+id/motherText"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/nah"
        android:layout_toRightOf="@id/motherText"
        android:paddingLeft="10dp"
        android:id="@+id/motherImage"/>
    <Spinner
        android:id="@+id/mother"
        android:layout_width="100dp"
        android:background="#fff"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/motherText"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Son"
        android:textSize="20dp"
        android:paddingTop="75dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mother"
        android:textColor="#fff"
        android:gravity="center"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="160"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Father"
        android:layout_alignParentTop="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:gravity="left"
        android:id="@+id/fatherText"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/nah"
        android:layout_toLeftOf="@id/fatherText"
        android:paddingRight="10dp"
        android:id="@+id/fatherIamge"/>
    <Spinner
        android:id="@+id/father"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fatherText"
        android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>


    </LinearLayout>
